<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:orientation="vertical"
        android:background="@color/pinkish"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_centerInParent="true"
            android:background="@drawable/profile_outline">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/showProfilePhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:padding="10sp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/addNewProfilePhoto"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_alignBottom="@id/showProfilePhoto"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_add"
                android:background="@drawable/add_back_white"
                android:padding="5sp"/>


        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:  "
                android:fontFamily="@font/font_regular"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/showUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/userName"
                android:textColor="@color/black"
                android:fontFamily="@font/font_regular"
                android:textSize="20sp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp">

            <TextView
                android:id="@+id/userCollegeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="College Name:  "
                android:fontFamily="@font/font_regular"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/showUserCollegeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/userCollegeName"
                android:textColor="@color/black"
                android:fontFamily="@font/font_regular"
                android:textSize="20sp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp">

            <TextView
                android:id="@+id/userCollegeIDNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Number:  "
                android:fontFamily="@font/font_regular"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/showUserCollegeIDNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/userCollegeIDNumber"
                android:textColor="@color/black"
                android:fontFamily="@font/font_regular"
                android:textSize="20sp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp">

            <TextView
                android:id="@+id/userEmailAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email ID:  "
                android:fontFamily="@font/font_regular"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/showUserEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/userEmailAddress"
                android:textColor="@color/black"
                android:fontFamily="@font/font_regular"
                android:textSize="20sp"
                />

        </RelativeLayout>

        <Button
            android:id="@+id/updateUserProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:text="Update Profile"
            android:textAllCaps="false"
            android:fontFamily="@font/font_regular"
            android:textSize="18sp"/>

    </LinearLayout>

</LinearLayout>