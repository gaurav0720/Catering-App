<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15sp"
    android:background="@drawable/item_card_back"
    android:orientation="vertical"
    android:paddingTop="15sp"
    android:paddingBottom="15sp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/showItemImage"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:padding="5sp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/showItemName"
        android:text="Item Name"
        android:textSize="18sp"
        android:fontFamily="@font/font_regular"
        android:textColor="@color/black"
        android:padding="3sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:id="@+id/showItemOfferPrice"
            android:text="P1"
            android:textSize="20sp"
            android:fontFamily="@font/font_regular"
            android:textColor="#808080"
            android:layout_marginEnd="10sp"
            android:padding="3sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:id="@+id/showItemPrice"
            android:text="P2"
            android:textSize="20sp"
            android:fontFamily="@font/font_regular"
            android:textColor="#808080"
            android:padding="3sp"
            android:gravity="center"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/addItemToCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add to Cart"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:background="@drawable/signin_up_button"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:fontFamily="@font/font_regular"
        android:paddingTop="8sp"
        android:paddingBottom="8sp"
        android:layout_marginLeft="8sp"
        android:layout_marginRight="8sp"
        android:gravity="center"
        android:textColor="@color/white"/>

</LinearLayout>